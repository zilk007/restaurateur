
<h3>Restaurant: [<%=current_user.title%>]</h3>
<h2>VIP User</h2>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span4">
      <!--Sidebar content-->
      <%= image_tag(current_user.avatar.url(:medium)) %>
    </div>
    <div class="span4">
      <!--Body content-->  

<%= simple_form_for :vip, html: {class: "form-signin"} do |f| %>
   <div class="row">
      <div class="col-xs-12 col-sm-offset-0 form-group"> 

        <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "Name", input_html: {class: "form-control"} %>

       <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "E-mail", input_html: {class: "form-control"} %>
       </div>

  
      <div class="col-xs-8 col-sm-offset-0 form-group">
 <%= f.select :month, options_for_select((1..12).map {|m|Date::MONTHNAMES[m] % m}), {:include_blank => 'Birth Month'} , class: "form-control" %>
  </div>



    <div class="row">
      <div class="col-xs-5 col-sm-offset-2 form-group">

    <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
  </div>
  <div>
   <%= notice %>

  <% end %>
    </div>
  </div>
</div>
